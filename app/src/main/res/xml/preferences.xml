<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/textile">
        <EditTextPreference
            android:title="@string/user_name"
            app:icon="@drawable/ic_person_outline_black_24dp"
            app:key="@string/key_user_name"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:icon="@drawable/ic_receipt_black_24dp"
            app:key="@string/key_wallet_recovery_phrase"
            app:persistent="true"
            app:title="@string/wallet_recovery_phrase" />

        <Preference
            app:icon="@drawable/ic_person_black_24dp"
            app:key="@string/key_personal_thread_id"
            app:persistent="true"
            app:title="@string/personal_thread_id" />

        <Preference
            android:title="@string/cafes"
            app:icon="@drawable/ic_local_cafe_black_24dp"
            app:persistent="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/proofmode">
        <Preference
            app:icon="@drawable/ic_vpn_key_black_24dp"
            app:key="@string/key_proofmode_pgp_password"
            app:persistent="true"
            app:title="@string/proofmode_pgp_password" />

        <Preference
            app:icon="@drawable/ic_subject_black_24dp"
            app:key="@string/key_proofmode_pgp_public_key"
            app:persistent="true"
            app:title="@string/proofmode_pgp_public_key" />

        <SwitchPreference
            android:title="@string/proofmode_auto_notarize"
            app:icon="@drawable/ic_verified_user_black_24dp"
            app:key="@string/key_proofmode_auto_notarize" />

        <SwitchPreference
            android:title="@string/proofmode_track_location"
            app:icon="@drawable/ic_my_location_black_24dp"
            app:key="@string/key_proofmode_track_location" />

        <SwitchPreference
            android:title="@string/proofmode_track_device_id"
            app:icon="@drawable/ic_developer_board_black_24dp"
            app:key="@string/key_proofmode_track_device_id" />

        <SwitchPreference
            android:title="@string/proofmode_track_mobile_network"
            app:icon="@drawable/ic_network_cell_black_24dp"
            app:key="@string/key_proofmode_track_mobile_network" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/zion">
        <SwitchPreferenceCompat
            app:icon="@drawable/ic_memory_black_24dp"
            app:key="@string/key_sign_with_zion"
            app:title="@string/sign_with_zion" />
    </PreferenceCategory>
</PreferenceScreen>